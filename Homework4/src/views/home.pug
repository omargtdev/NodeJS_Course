extends layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        form#add-user(action="/users/new", method="POST") 
            h1.a11y-hidden Add User
            div 
                label.label-name
                    input(
                        type="text",
                        class="text",
                        name="name",
                        id="name"
                        placeholder="Put your name",
                        tabindex="1",
                        required=true
                    )
                    span.required Name
            div 
                label.label-name
                    input(
                        type="text",
                        class="text",
                        name="lastname",
                        id="lastname"
                        placeholder="Put your lastname",
                        tabindex="2",
                        required=true
                    )
                    span.required Lastname
            div 
                label.label-name
                    input(
                        type="text",
                        class="text",
                        name="age",
                        id="age"
                        placeholder="Put your age",
                        tabindex="3",
                        required=true
                    )
                    span.required Age
            input.enabled(type="submit", value="Register")

block scripts
    script(src="/js/users.js") 